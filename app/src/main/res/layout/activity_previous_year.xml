<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context="com.example.rish.androidapp.PreviousYearActivity">

        <Button
            android:id="@+id/buttonquestionpapersonline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD700"
            android:text="Question Papers"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="40dp"
            android:layout_above="@+id/buttondownloadedpapers"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttondownloadedpapers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD700"
            android:text="Downloaded Papers"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            android:layout_above="@+id/buttonDownload"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/buttonDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="#FFD700"
            android:text="Download"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            android:layout_above="@+id/buttonSubmit"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



